<component>
	<api>
		<prop name="padding_side" type="int" default="#base_lib_unit_md" />
		<prop name="padding_inside" type="int" default="#base_lib_unit_md" />
		<prop name="horizontal_align" type="enum:lv_flex_align" default="start" />
		<prop name="vertical_align" type="enum:lv_flex_align" default="start" />
		<prop name="content_align" type="enum:lv_flex_align" default="start" />
	</api>
	<styles>
		<style
			name="style_base"
			width="content"
			height="content"
			layout="flex"
			flex_flow="row"
			flex_cross_place="center"
			flex_track_place="center"
			pad_all="#base_lib_unit_md"
			pad_row="#base_lib_unit_md"
			pad_column="#base_lib_unit_md"
		/>
	</styles>
	<view
		extends="container"
		style_pad_all="$padding_side"
		style_pad_row="$padding_inside"
		style_pad_column="$padding_inside"
		style_flex_main_place="$horizontal_align"
		style_flex_cross_place="$vertical_align"
		style_flex_track_place="$content_align"
	>
		<style name="style_base" />
		<style name="style_light_scrollbar" selector="scrollbar" />
		<bind_style name="style_dark_scrollbar" selector="scrollbar" ref_value="1" subject="subject_dark_mode" />
	</view>
</component>
