<component>
	<styles>
		<style name="style_base_light" image_recolor="#color_light_text" image_recolor_opa="100%" />
		<style name="style_base_dark" image_recolor="#color_dark_text" />
	</styles>
	<api>
		<prop name="src" type="image" default="icon_wifi" />
	</api>
	<view extends="lv_image" src="$src">
		<style name="style_base_light" />
		<bind_style name="style_base_dark" subject="subject_dark_mode" ref_value="1" />
	</view>
</component>
