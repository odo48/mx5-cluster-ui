<component>
	<api>
		<prop name="subject_hour" type="subject" default="subject_hour" />
		<prop name="subject_minute" type="subject" default="subject_minute" />
		<prop name="font" type="font" default="font_sm" />
	</api>
	<view
		extends="row"
		style_text_font="$font"
		padding_inside="0"
		padding_side="0"
		vertical_align="center"
		content_align="center"
	>
		<lv_label bind_text="$subject_hour" bind_text-fmt="%d">
			<remove_style_all />
			<!-- No style added, it should inherit the text color of the parent -->
		</lv_label>
		<lv_label bind_text="$subject_minute" bind_text-fmt=":%02d">
			<remove_style_all />
		</lv_label>
	</view>
</component>
