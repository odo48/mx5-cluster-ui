<component>
	<api>
		<prop name="subject_day_name" type="subject" help="Day of the week (e.g. Monday)" default="subject_day_name" />
		<prop name="subject_day_index" type="subject" help="Day of the month (e.g. 14)" default="subject_day_index" />
		<prop
			name="subject_month_name"
			type="subject"
			help="Month of the year (e.g. August)"
			default="subject_month_name"
		/>
		<prop name="font" type="font" default="font_sm" />
	</api>
	<view extends="row" style_text_font="$font" padding_side="0" padding_inside="0">
		<lv_label bind_text="$subject_day_name" bind_text-fmt="%s, ">
			<remove_style_all />
			<!-- No style added, it should inherit the text color of the parent -->
		</lv_label>
		<lv_label bind_text="$subject_day_index" bind_text-fmt="%d" />
		<lv_label bind_text="$subject_month_name" bind_text-fmt=" %s" />
	</view>
</component>
