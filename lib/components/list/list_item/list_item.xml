<component>
	<api>
		<prop name="title" type="string" default="Title" />
		<prop name="subtitle" type="string" default="Subtitle" />
	</api>

	<styles>
		<style
			name="style_base"
			height="content"
			width="100%"
			bg_opa="0%"
			border_side="bottom"
			border_width="1"
			radius="0"
		/>
	</styles>
	<view extends="panel">
		<style name="style_base" />

		<column width="100%" height="content" padding_side="0">
			<h3 text="$title" flex_in_new_track="true" long_mode="scroll" />
			<h4 text="$subtitle" style_text_opa="60%" />
		</column>
	</view>
</component>
