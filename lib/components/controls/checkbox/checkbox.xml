<component>
	<styles>
		<style name="style_base" text_font="font_md" pad_column="#base_lib_unit_md" />
		<style
			name="style_light_indicator"
			border_color="#color_accent"
			border_width="2"
			bg_color="#color_accent"
			bg_opa="24%"
			radius="#base_lib_unit_sm"
		/>
		<style
			name="style_light_indicator_checked"
			border_color="#color_accent"
			bg_color="#color_accent"
			bg_opa="100%"
			bg_image_src="icon_check"
			bg_image_recolor="#color_accent_text"
			bg_image_recolor_opa="100%"
		/>
		<style name="style_dark_indicator" border_color="#color_accent" />
	</styles>

	<view extends="lv_checkbox">
		<remove_style_all />
		<!-- Inherit the text color from the parent -->
		<style name="style_base" />
		<style name="style_light_indicator" selector="indicator" />
		<style name="style_light_indicator_checked" selector="indicator|checked" />
		<bind_style name="style_dark_indicator" selector="indicator" subject="subject_dark_mode" ref_value="1" />
	</view>
</component>
