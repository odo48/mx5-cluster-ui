<component>
	<api>
		<prop name="subject" type="subject" default="subject_test" />
		<prop name="format" type="string" default="%d" />
	</api>

	<styles>
		<style name="style_main" width="#base_lib_block_1_5" />
		<style name="style_label" text_font="font_lg_bold" />
	</styles>

	<view extends="row" horizontal_align="space_between" vertical_align="center" padding_side="#base_lib_unit_sm">
		<style name="style_main" />
		<button_circle icon="icon_minus">
			<subject_increment_event subject="$subject" step="-1" trigger="clicked" />
			<subject_increment_event subject="$subject" step="-1" trigger="long_pressed_repeat" />
		</button_circle>

		<lv_label bind_text="$subject" bind_text-fmt="$format">
			<!-- Inherit text color from the parent -->
			<style name="style_label" />
		</lv_label>

		<button_circle icon="icon_plus">
			<subject_increment_event subject="$subject" step="1" trigger="clicked" />
			<subject_increment_event subject="$subject" step="1" trigger="long_pressed_repeat" />
		</button_circle>
	</view>
</component>
